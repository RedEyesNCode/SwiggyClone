<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homeScreen.HomeActivity">

    <FrameLayout
        android:id="@+id/mainHomeContainer"
        android:layout_above="@id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="match_parent">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/_60sdp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:weightSum="4">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:id="@+id/btnHome"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/ic_swiggy_home"
                android:padding="@dimen/_8sdp">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:text="SWIGGY"
                android:textColor="@color/black"
                android:fontFamily="@font/firasans_medium"

                android:textSize="@dimen/_9sdp"
                android:layout_height="wrap_content">

            </TextView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:id="@+id/btnFood"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/ic_food"
                android:padding="@dimen/_8sdp">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:text="FOOD"
                android:fontFamily="@font/firasans_medium"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"
                android:layout_height="wrap_content">

            </TextView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:id="@+id/btnSearch"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:src="@drawable/ic_search"
                android:layout_height="@dimen/_35sdp"
                android:padding="@dimen/_8sdp">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:text="Search"
                android:fontFamily="@font/firasans_medium"
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"
                android:layout_height="wrap_content">

            </TextView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:id="@+id/btnUserAccount"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:id="@+id/ic_swiggyhome"
                android:src="@drawable/account"
                android:padding="@dimen/_8sdp">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tvSwiggyHome"
                android:text="Account"
                android:textColor="@color/black"

                android:fontFamily="@font/firasans_medium"
                android:textSize="@dimen/_9sdp"
                android:layout_height="wrap_content">

            </TextView>


        </LinearLayout>



    </LinearLayout>


</RelativeLayout>