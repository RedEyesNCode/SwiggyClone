<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/_4sdp"
        android:layout_marginHorizontal="@dimen/_2sdp"
        android:layout_marginVertical="@dimen/_4sdp"
        android:background="@drawable/background_orange_border"
        app:contentPadding="@dimen/_5sdp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/foodImage"
                android:layout_width="@dimen/_45sdp"
                app:riv_corner_radius="@dimen/_3sdp"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/_45sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/foodImage"
                android:layout_marginLeft="@dimen/_8sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rmedium"
                    android:text="Veggie Tomato Mix"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvItemPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/rmedium"
                    android:text="$ 130"
                    android:textColor="@color/orange" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:visibility="invisible"
                android:background="@drawable/background_button_orange"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:id="@+id/tvIncrement"
                    android:padding="@dimen/_8sdp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/rmedium"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:id="@+id/tvQuantity"
                    android:padding="@dimen/_8sdp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/rmedium"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:padding="@dimen/_8sdp"
                    android:id="@+id/tvDecrement"
                    android:textColor="@color/white"
                    android:fontFamily="@font/rmedium"/>


            </LinearLayout>

        </RelativeLayout>




    </LinearLayout>


</LinearLayout>