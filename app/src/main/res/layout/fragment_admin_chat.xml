<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".chat.AdminChatFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:focusable="true"
        android:clickable="true"
        android:orientation="vertical"
        tools:context=".customerapp.ui.chatSupport.view.customerChatSection.AdminChatFragment">

        <RelativeLayout
            android:id="@+id/toolbartop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/toolbar_bg"
            android:clickable="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true">

                    <ImageView
                        android:id="@+id/backIcon"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:gravity="center"
                        android:src="@drawable/back">

                    </ImageView>
                </LinearLayout>

                <TextView
                    android:id="@+id/mainCategoryName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="center"
                    android:text="Lash Traders Support"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_below="@id/toolbartop"
            android:layout_above="@id/commentLayout"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recvChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_12sdp"
                tools:itemCount="12"
                tools:listitem="@layout/incoming_message_list" />

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/commentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <EditText
                    android:id="@+id/edtMessage"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginHorizontal="@dimen/_4sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_toLeftOf="@id/btnSend"
                    android:layout_weight="1"
                    android:background="@drawable/background_orange_border"
                    android:fontFamily="@font/lato_regular"
                    android:hint="Type Your message here"
                    android:inputType="text"
                    android:maxLength="100"
                    android:paddingHorizontal="@dimen/_4sdp"
                    android:paddingVertical="@dimen/_9sdp"
                    android:textColorHint="@color/gray_black"
                    android:textSize="@dimen/_10ssp" />

                <ImageView
                    android:id="@+id/btnSend"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_12sdp"
                    android:src="@drawable/ic_send">

                </ImageView>


            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>