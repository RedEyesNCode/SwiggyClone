<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"> <!--Used to display Big Enough Layout for Dialog.-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/mainLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/orange_light">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rbold"
                android:id="@+id/alertTitle"
                android:text="Important Alert"
                android:gravity="center_horizontal"
                android:padding="@dimen/_12sdp"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/white">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_6sdp"
                android:orientation="vertical"
                android:background="@color/white">
                <TextView
                    android:id="@+id/tvSetText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rmedium"
                    android:text="Your seller account has been disabled by admin. Please contact to the support."
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="@dimen/_8sdp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:background="@color/white">
                <LinearLayout
                    android:id="@+id/btnYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/background_button_orange"
                    android:fontFamily="@font/rmedium"
                    android:paddingHorizontal="@dimen/_25sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingVertical="@dimen/_5sdp"
                        android:text="Yes"
                        android:fontFamily="@font/rmedium"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_9sdp">

                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btnNo"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/background_button_orange"
                    android:fontFamily="@font/rmedium"
                    android:paddingHorizontal="@dimen/_25sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingVertical="@dimen/_5sdp"
                        android:text="No"
                        android:fontFamily="@font/rmedium"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_9sdp">

                    </TextView>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>