<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".cart.view.cartAddress.CartAddressFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginHorizontal="@dimen/_25sdp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/rmedium"
            android:text="Checkout"
            android:textColor="@color/black"
            android:textSize="@dimen/_21sdp" />

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/rmedium"
        android:padding="@dimen/_4sdp"
        android:textSize="@dimen/_32sdp"
        android:text="Payment"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginHorizontal="@dimen/_25sdp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:fontFamily="@font/rmedium"
            android:text="Payment"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/_35sdp"
            android:background="@drawable/background_search_ic"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">
            <RadioGroup
                android:layout_width="match_parent"
                android:padding="@dimen/_12sdp"
                android:id="@+id/rbgroupPayment"
                android:layout_height="wrap_content">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:checked="true"
                    android:id="@+id/rbUpiPayment"
                    android:buttonTint="@color/orange"
                    android:layout_height="wrap_content"
                    android:text="Upi Payment"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_alignBottom="@id/layoutProfile"
                    android:background="@color/orange" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:buttonTint="@color/orange"
                    android:layout_height="wrap_content"
                    android:id="@+id/rbCardPayment"
                    android:text="Card Payment"/>

            </RadioGroup>
        </LinearLayout>



    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/_35sdp"
            android:background="@drawable/background_search_ic"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">



        </LinearLayout>



    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginHorizontal="@dimen/_25sdp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:fontFamily="@font/rmedium"
            android:text="Total"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/tvTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/rmedium"
            android:text="$ 130"
            android:textColor="@color/orange"
            android:textSize="@dimen/_12sdp" />
    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnProceed"
        android:layout_width="@dimen/_195sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_45sdp"
        android:background="@drawable/background_button_orange"
        android:text="Pay $ 130"
        android:textAllCaps="false"
        android:textColor="@color/white" />
</LinearLayout>