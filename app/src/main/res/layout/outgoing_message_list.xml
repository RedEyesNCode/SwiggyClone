<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/profileLayout"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/_4sdp"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="@dimen/_25sdp"
                android:id="@+id/messageProfile"
                android:visibility="gone"
                android:src="@drawable/ic_side_profile"
                android:layout_height="wrap_content">
            </com.makeramen.roundedimageview.RoundedImageView>



        </LinearLayout>

        <RelativeLayout
            android:id="@+id/outgoingTextMessageLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_toRightOf="@+id/profileLayout"
            android:background="@drawable/shape_bg_incoming_bubble"
            android:orientation="vertical"
            android:paddingVertical="@dimen/_4sdp"
            android:paddingHorizontal="@dimen/_8sdp">


            <TextView
                android:id="@+id/tvMessage"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/lato_regular"
                android:paddingHorizontal="@dimen/_4sdp"
                android:paddingVertical="@dimen/_2sdp"
                android:text="1"
                android:textColor="@color/black"
                android:visibility="visible" />


            <TextView
                android:id="@+id/tvMessageDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvMessage"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/lato_regular"
                android:text="6 :45 pm"
                android:textColor="@color/black"
                android:visibility="visible" />


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/outgoingImageMessageLayout"
            android:layout_width="@dimen/_100sdp"
            android:background="@drawable/shape_bg_incoming_bubble"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_alignParentLeft="true"
            android:layout_height="@dimen/_110sdp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/chatMedia"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_alignParentTop="true"
                android:padding="@dimen/_4sdp"
                android:scaleType="fitXY"
                android:src="@drawable/feed_image"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvMessageDateImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:padding="@dimen/_4sdp"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/lato_regular"
                android:text="6 :45 pm"
                android:textColor="@color/black"
                android:visibility="visible" />

        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>